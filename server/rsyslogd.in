#! /bin/bash

. @DRBD_TEST_LIB@
set -e

SERVER=$1
PORT=$2

export PATH=${PATH#@DRBD_TEST_DATA@:}

mkdir -p @DRBD_TEST_VAR@/run
rsyslogd -i @DRBD_TEST_VAR@/run/rsyslogd.pid -f <(
    sed -e "s:@PORT@:$PORT:g" \
	-e "s:@SERVER@:$SERVER:g" @DRBD_TEST_DATA@/rsyslog.conf.in)

register_cleanup --job="$DRBD_TEST_JOB" -- kill $(cat @DRBD_TEST_VAR@/run/rsyslogd.pid)
