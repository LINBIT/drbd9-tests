#! /bin/bash

. @DRBD_TEST_LIB@
set -e

CONF=/etc/rsyslog.d/forward.conf
SERVER=$1
PORT=$2

rm -f $CONF
sed -e "s:@PORT@:$PORT:g" \
    -e "s:@SERVER@:$SERVER:g" @DRBD_TEST_DATA@/rsyslog-forward.conf.in \
    > $CONF
register_cleanup --job="$DRBD_TEST_JOB" -- rm -f $CONF

systemctl restart rsyslog || kill -HUP $(cat /var/run/syslogd.pid)
